        <field>
            <a is-accessible="true">firstname</a>
            <b>firstname</b>
        </field>
        <field>
            <a is-accessible="true">lastname</a>
            <b>lastname</b>
        </field>
        <field>
            <a is-accessible="true">street</a>
            <b>street</b>
