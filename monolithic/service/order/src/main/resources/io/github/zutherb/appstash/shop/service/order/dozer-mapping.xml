        </field>
        <field>
            <a>latitude</a>
            <b get-method="getLatitude" set-method="setLatitude">latitude</b>
        </field>
    </mapping>

    <mapping>
        <class-a>io.github.zutherb.appstash.shop.service.order.model.OrderItemInfo</class-a>
        <class-b>io.github.zutherb.appstash.shop.repository.order.model.OrderItem</class-b>
