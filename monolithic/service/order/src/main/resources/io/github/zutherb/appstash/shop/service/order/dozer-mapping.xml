        <field>
            <a>county</a>
            <b is-accessible="true">county</b>
        </field>
        <field>
            <a>houseNumber</a>
            <b is-accessible="true">houseNumber</b>
        </field>
        <field>
            <a>state</a>
            <b is-accessible="true">state</b>
